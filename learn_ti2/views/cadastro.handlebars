<div class="auth-page"> {{!-- Adicionei a classe auth-page para aplicar o estilo de fundo --}}
    <div class="auth-container">
        <img src="/images/logo.jpg" alt="Logo" class="logo-auth">
        <h2>Criar Conta</h2>

        {{!-- Sistema de Notificações --}}
        {{#if notification}}
            <div class="notification notification-{{notification.type}}" id="notification">
                <div class="notification-content">
                    <strong class="notification-title">{{notification.title}}</strong>
                    <p class="notification-message">{{notification.message}}</p>
                    <button class="notification-close" onclick="closeNotification()">&times;</button>
                </div>
            </div>
        {{/if}}

        <form class="auth-form" action="/cadastro" method="POST"> {{!-- Apliquei a classe auth-form --}}
            <input type="text" placeholder="Usuário" id="register-usuario" required name="usuario" autocomplete="username">
            <input type="email" placeholder="Email" id="register-email" required name="email" autocomplete="email">
            <input type="password" placeholder="Senha" id="register-senha" required name="senha" autocomplete="new-password">
            <button type="submit">Criar Conta</button>
            <div class="auth-footer">
                <a href="/">Voltar para login</a>
            </div>
        </form>
    </div>
</div>

<script src="/js/notification.js"></script> {{!-- Link para o novo arquivo JS de notificações --}}
<script src="/js/auth.js"></script> {{!-- Link para o novo arquivo JS de autenticação (validação frontend) --}}