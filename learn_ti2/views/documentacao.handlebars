    <style>
        /* ESTILOS GERAIS */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            color: #333;
        }
        
        /* BARRA SUPERIOR */
        .main-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 30px;
            background-color: #001542;
            color: white;
        }
        
        .header-left {
            display: flex;
            align-items: center;
            gap: 20px;
        }
        
        .back-arrow {
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            transition: transform 0.3s;
        }
        
        .back-arrow:hover {
            transform: translateX(-3px);
        }
        
        .logo {
            height: 40px;
        }
        
        .user-avatar {
            font-size: 2rem;
            color: white;
            cursor: pointer;
            position: relative;
        }
        
        .user-dropdown {
            display: none;
            position: absolute;
            right: 0;
            background-color: white;
            min-width: 150px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.2);
            border-radius: 5px;
            padding: 10px;
            z-index: 100;
        }
        
        .user-dropdown a {
            color: #333;
            text-decoration: none;
            display: block;
            padding: 5px 0;
        }
        
        .user-avatar:hover .user-dropdown {
            display: block;
        }
        
        /* BARRA DE NAVEGAÇÃO */
        .top-nav {
            background-color: #0a74da;
            padding: 10px 20px;
        }
        
        .top-nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            gap: 20px;
        }
        
        .top-nav a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            display: flex;
            align-items: center;
            gap: 5px;
        }
        
        /* CONTEÚDO PRINCIPAL */
        .container {
            padding: 40px 20px;
            max-width: 1200px;
            margin: 0 auto;
            text-align: center;
        }
        
        h1 {
            color: #001542;
            margin-bottom: 30px;
        }
        
        /* GRID DE LINGUAGENS */
        .languages-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 25px;
            margin-top: 40px;
        }
        
        .language-card {
            background-color: white;
            border-radius: 10px;
            padding: 25px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
            transition: transform 0.3s, box-shadow 0.3s;
        }
        
        .language-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        
        .language-icon {
            font-size: 3rem;
            margin-bottom: 15px;
        }
        
        .language-card h2 {
            color: #001542;
            margin: 0 0 10px;
        }
        
        .language-link {
            display: inline-block;
            margin-top: 15px;
            padding: 8px 20px;
            background-color: #0a74da;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-weight: 500;
            transition: background-color 0.3s;
        }
        
        .language-link:hover {
            background-color: #001542;
        }
        
        /* CORES DAS LINGUAGENS */
        .python { color: #3776AB; }
        .javascript { color: #F7DF1E; }
        .java { color: #007396; }
        .csharp { color: #239120; }
        .c { color: #A8B9CC; }
        .cpp { color: #00599C; }
        .html { color: #E34F26; }
        .mysql { color: #4479A1; }
        
        /* RESPONSIVIDADE */
        @media (max-width: 768px) {
            .languages-grid {
                grid-template-columns: 1fr;
            }
            
            .header-left {
                gap: 10px;
            }
        }
    </style>
